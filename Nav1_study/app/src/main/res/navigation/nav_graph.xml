<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- menu item id, navigation id와 container id에 대해해 동일야 함   -->
    <fragment
        android:id="@+id/musicFragment"
        android:name="hello.world.navigation_study.fragments.MusicFragment"
        android:label="fragment_music"
        tools:layout="@layout/fragment_music">

        <argument
            android:name="itemId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="hello.world.navigation_study.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_musicFragment"
            app:destination="@id/musicFragment" />
        <action
            android:id="@+id/action_homeFragment_to_friendsFragment"
            app:destination="@id/friendsFragment" />
    </fragment>

    <fragment
        android:id="@+id/friendsFragment"
        android:name="hello.world.navigation_study.fragments.FriendsFragment"
        android:label="fragment_friends"
        tools:layout="@layout/fragment_friends" />
</navigation>